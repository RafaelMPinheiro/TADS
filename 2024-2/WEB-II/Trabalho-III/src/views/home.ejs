<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-zinc-900 text-white flex items-center justify-center min-h-screen"
  >
    <div class="w-full max-w-4xl">
      <div class="bg-zinc-800 shadow-md rounded-lg px-8 pt-6 pb-8 mb-6">
        <h1 class="text-4xl font-bold mb-6 text-center">Tela Inicial</h1>
        <p class="text-xl mb-6 text-center">Olá, <%= user.name %></p>

        <div class="mb-8">
          <h2 class="text-2xl font-bold mb-4">Acessos Rápidos</h2>
          <ul class="grid grid-cols-2 gap-4">
            <% user.permissions.map(permission => { %>
            <li>
              <a
                href="/<%= permission.path %>"
                class="block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg text-center"
              >
                <%= permission.name %>
              </a>
            </li>
            <% }) %>
          </ul>
        </div>

        <div class="overflow-x-auto">
          <h2 class="text-2xl font-bold mb-4">Usuários</h2>
          <table
            class="min-w-full table-auto text-sm text-left border-separate border-spacing-0"
          >
            <thead class="bg-zinc-700 text-zinc-300 uppercase">
              <tr>
                <th class="py-3 px-5 text-center">Avatar</th>
                <th class="py-3 px-5">ID</th>
                <th class="py-3 px-5">Nome</th>
                <th class="py-3 px-5">Email</th>
                <th class="py-3 px-5">Permissões</th>
              </tr>
            </thead>
            <tbody class="text-zinc-400">
              <% users.forEach(user => { %>
              <tr
                class="border-b border-zinc-600 hover:bg-zinc-700 transition-colors"
              >
                <td class="py-3 px-5 text-center">
                  <img
                    src="<%= user.avatar %>"
                    alt="<%= user.name %>"
                    class="w-12 h-12 rounded-full mx-auto"
                  />
                </td>
                <td class="py-3 px-5 whitespace-nowrap"><%= user.id %></td>
                <td class="py-3 px-5"><%= user.name %></td>
                <td class="py-3 px-5"><%= user.email %></td>
                <td class="py-3 px-5">
                  <% user.modules.forEach(module => { %>
                  <span
                    class="block bg-zinc-700 text-zinc-300 py-1 px-2 rounded-lg text-xs font-medium mb-1"
                  >
                    <%= module.name %>
                  </span>
                  <% }); %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <div class="mt-8 flex justify-center">
          <a
            href="/logout"
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg"
          >
            Sair
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
